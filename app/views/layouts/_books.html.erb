<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Date</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :size => '40x40', format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <td><%= book.created_at.strftime('%Y/%m/%d %H:%M')%></td>
        <td>
          <%= render 'books/favorite', book: book%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-4 col-md-offset-4">
    <%= paginate @books %>
  </div>
</div>
