<div class="col-md-3">
  <%= render 'layouts/info', user: current_user %>
  <%= render 'layouts/new', book: @book %>
</div>
<div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
        <thead>
            <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td>
                <%= attachment_image_tag user, :profile_image, :size => '40x40', format: 'jpeg', fallback: "no_image.jpg", class: "attachment user profile_image fallback" %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>